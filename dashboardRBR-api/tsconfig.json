{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "strict": false,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "lib": ["es6", "dom"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"],
    "baseUrl": "./",
    "paths": {
      "@~/*": ["src/*"]
    }
  }